<h1>Rails掲示板</h1>

<div class="button-container">
    <%=  link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>


<ul>
    <% @posts.each do |post|%>
        <%= link_to post_path(id: post.id) do%>
        <li>
            <h2><%= post.title %></h2>
            <span>
                <small><%= post.created_at %></small>
            </span>
        </li>
        <% end %>
    <% end %>
</ul>