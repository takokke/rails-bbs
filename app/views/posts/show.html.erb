<h1>投稿</h1>

<div class="button-container">
<%= link_to "投稿一覧へ", posts_path , class: "link-button"%>
</div>

<ul>
    <li>
        <h2><%= @post.title %></h2>
        <p><%= @post.content %></p>
        <span>
            <small><%= @post.created_at %></small>
        </span>
        <div class="edit-delete-wrapper">
            <%=  link_to "編集", edit_post_path(id: @post.id), class: "link-button" %>
            <%= button_to "削除", post_path(id: @post.id), method: :delete, class: "link-delete-button" %>
        </div>
    </li>

</ul>
